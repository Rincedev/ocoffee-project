<%- include('partials/header') %>

<main class="admin-main">
  <a class="btn admin-logout-btn" href="/logout">Se déconnecter</a>
  <h2 class="add-product-title">Ajouter un produit au catalogue</h2>
  <form id="add-product-form" action="/admin/product/add" method="post" enctype="multipart/form-data">
    <label for="name">Nom</label>
    <input type="text" name="name" id="name" placeholder="Nom du produit">
    <label for="origin">Origine</label>
    <input type="text" name="origin" id="origin" placeholder="Pays d'origine">
    <label for="category">Choisissez la catégorie</label>
    <select name="category" id="category-select">      
      <% allCategories.forEach(cat => { %>
      <option value="<%= cat.category %>"><%= cat.category %></option>
      <% }); %>
    </select>
    <label for="price">Prix au kilo</label>
    <input type="number" step="0.01" name="price" id="price">
    <label for="reference_number">N° de référence</label>
    <input type="number" name="reference_number" class="reference_number">
    <legend>Disponible</legend>
    <div>      
      <input type="radio" name="available" value="true">
      <label for="available">Oui</label>  
    </div>
    <div>      
      <input type="radio" name="available" value="false">
      <label for="available">Non</label>
    </div>
    <label for="description">Description du produit</label>
    <textarea name="description" id="description" placeholder="Entrez la description du produit ici..."></textarea>
    <label for="uploaded_file">Uploadez votre image : </label>
    <input type="file" name="uploaded_file" />
    <button class="btn">Ajouter</button> 

</main>

<%- include('partials/footer') %>